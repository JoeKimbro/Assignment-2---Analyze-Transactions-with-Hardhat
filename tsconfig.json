{
  "compilerOptions": {
    "lib": ["es2023"],                    // Ensures ES2023 features are available
    "module": "node16",                   // Use Node.js 16 module system
    "target": "es2022",                   // Compiles to ES2022 for modern JS features
    "strict": true,                       // Enforces strict type-checking options
    "esModuleInterop": true,              // Ensures compatibility with CommonJS and ES Modules
    "skipLibCheck": true,                 // Skips type checking of declaration files for faster compilation
    "moduleResolution": "node16",         // Uses the Node.js module resolution algorithm for ES modules
    "outDir": "dist",                     // Specifies the output directory for compiled JavaScript files
    "declaration": true,                  // Generates corresponding '.d.ts' files for type declaration
    "declarationMap": true,               // Generates source maps for declaration files
    "sourceMap": true,                    // Generates '.map' files for debugging
    "resolveJsonModule": true,            // Allows importing `.json` files as modules
    "noEmit": false,                      // Ensure the compiler emits JavaScript files (default is true)
    "skipDefaultLibCheck": true,          // Skips type checking of default libraries
    "isolatedModules": true,              // Ensures that all files are isolated (enables transpile-only mode)
    "allowSyntheticDefaultImports": true, // Allows synthetic default imports from modules without them
    "strictNullChecks": true,             // Enables strict null checks
    "noUnusedLocals": true,               // Disallows unused local variables
    "noUnusedParameters": true,           // Disallows unused parameters
    "noImplicitAny": true,                // Disallows implicit `any` types
    "noImplicitThis": true                // Disallows the `any` type for `this`
  },
  "include": [
    "src/**/*",                           // Specifies the root directory of your source files
    "hardhat.config.ts",                  // Ensure the config file is included for compilation
    "scripts/**/*",                       // Include scripts folder for Hardhat tasks
    "contracts/**/*"                      // Include the contracts folder if you're compiling Solidity contracts
  ],
  "exclude": [
    "node_modules",                       // Exclude the node_modules directory
    "dist"                                // Exclude the output directory
  ]
}
